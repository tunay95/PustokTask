@using WebAppRelation.Areas.AdminPanel.ViewModels
<!-- partial -->
@model Category
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Category</h4>
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                                <span asp-validation-for="Name" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ParentCategoryId" class="form-label">Categories</label>
                                <select class="form-select" asp-for="ParentCategoryId">
                                @foreach (var item in ViewBag.Categories)
                            {
                                    <option value="@item.Id">@item.Name</option>
                            }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

