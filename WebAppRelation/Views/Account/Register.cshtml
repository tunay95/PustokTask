<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form method="post">
					<div class="login-form">
						<h4 class="login-title">REGISTER</h4>
						<p><span class="font-weight-bold">If you/re new customer :3</span></p>
						<div class="row justify-content-center">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="FullName">Full Name</label>
								<input class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter your full name" asp-for="FullName" placeholder="Enter your full name">
								<span asp-validation-for="FullName" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Username">Username</label>
								<input class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter your username" asp-for="Username" placeholder="Enter your username">
								<span asp-validation-for="Username" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Email">Email</label>
								<input asp-for="Email" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter your Email" placeholder="Enter your Email">
								<span asp-validation-for="Email" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Password">Password</label>
								<input asp-for="Password" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter your Password" placeholder="Enter your Password">
								<span asp-validation-for="Password" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="RepeatPassword">Repeat Password</label>
								<input asp-for="RepeatPassword" class="mb-0 form-control" type="text" id="name"
									   placeholder="Please Repeat The Password" placeholder="Please Repeat The Password">
								<span asp-validation-for="RepeatPassword" style="color:red"></span>
							</div>
					
							<div class="col-md-12" asp-validation-summary="All">
								<button asp-action="Register" asp-controller="Account" class="btn btn-outlined">Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
